header.navbar.fixed-top
  .container
    = link_to "meet", root_path, id: "logo"
    nav
      ul
        li
          = link_to users_path do
            i.fas.fa-search.fa-3x
        - if logged_in?
          li
            = link_to followers_user_path(current_user) do
              - if unchecked_follow_notifications.any?
                i.follower-link.far.fa-thumbs-up
                i.n-circle.fas.fa-circle
              - else
                i.follower-link.far.fa-thumbs-up.fa-3x
          li
            = link_to matchers_user_path(current_user) do
              - if unchecked_message_notifications.any?
                i.chat-link.far.fa-comments.fa-3x
                i.n-circle.fas.fa-circle
              - else
                i.chat-link.far.fa-comments.fa-3x
          li
            = link_to user_path(current_user) do
              i.my-profile-link.far.fa-user.fa-3x
          li.dropdown
            a.dropdown-toggle[href="#" data-toggle="dropdown"]
              i.fas.fa-cog.fa-3x
              b.caret
            ul.dropdown-menu
              li
                = link_to "Account", account_user_path(current_user)
              li.divider
              li
                = link_to "Log out", logout_path, method: :delete
        - else
          li
            = link_to "Sign up", signup_path, class: "btn btn-success btn-lg"
          li
            = link_to "Log in", login_path, class: "btn btn-primary btn-lg"
