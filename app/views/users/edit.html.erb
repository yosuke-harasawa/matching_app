<% provide(:title, "Edit user") %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: user_path(@user), local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "user name" %>
      </div>
      
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "email" %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "password" %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password confirmation" %>
      </div>
      
      <%= f.submit "Update Profile", class: "btn btn-primary btn-lg" %>
    <% end %>  
  </div>
</div>